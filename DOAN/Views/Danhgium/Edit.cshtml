@model DOAN.Models.Danhgium

@{
    ViewData["Title"] = "Chỉnh sửa đánh giá";
}

<h1 class="text-center my-4">Chỉnh Sửa Đánh Giá</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="border p-4 rounded shadow bg-light">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <input type="hidden" asp-for="MaDg" />

            <div class="mb-3">
                <label asp-for="MaMh" class="form-label fw-bold">Sản Phẩm</label>
                <select asp-for="MaMh" class="form-control" asp-items="ViewBag.MaMh"></select>
                <span asp-validation-for="MaMh" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MaNd" class="form-label fw-bold">Người dùng</label>
                <select asp-for="MaNd" class="form-control" asp-items="ViewBag.MaNd"></select>
                <span asp-validation-for="MaNd" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Rating" class="form-label fw-bold">Đánh giá (1-5)</label>
                <input asp-for="Rating" class="form-control" placeholder="Nhập điểm đánh giá từ 1 đến 5" min="1" max="5" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="BinhLuan" class="form-label fw-bold">Bình luận</label>
                <textarea asp-for="BinhLuan" class="form-control" rows="3" placeholder="Nhập bình luận của bạn..."></textarea>
                <span asp-validation-for="BinhLuan" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="NgayDanhGia" class="form-label fw-bold">Ngày đánh giá</label>
                <input asp-for="NgayDanhGia" type="date" class="form-control" />
                <span asp-validation-for="NgayDanhGia" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu thay đổi
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
