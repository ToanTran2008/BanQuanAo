@model IEnumerable<DOAN.Models.Danhgium>

@{
    ViewData["Title"] = "Danh sách đánh giá";
}

<h1 class="text-center my-4">Danh Sách Đánh Giá</h1>

<!-- <div class="mb-3 text-end">
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Thêm mới
    </a>
</div>-->

<table class="table table-striped table-bordered text-center">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.Rating)</th>
            <th>@Html.DisplayNameFor(model => model.BinhLuan)</th>
            <th>@Html.DisplayNameFor(model => model.NgayDanhGia)</th>
            <th>Mặt hàng</th>
            <th>Người dùng</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td>@Html.DisplayFor(modelItem => item.BinhLuan)</td>
                <td>@Html.DisplayFor(modelItem => item.NgayDanhGia)</td>
                <td>@Html.DisplayFor(modelItem => item.MaMhNavigation.MaMh)</td>
                <td>@Html.DisplayFor(modelItem => item.MaNdNavigation.MaNd)</td>
                <td>
                    <!--<a asp-action="Edit" asp-route-id="@item.MaDg" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i> Sửa</a>
                         <a asp-action="Delete" asp-route-id="@item.MaDg" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Xóa</a>
                    -->
                    <a asp-action="Details" asp-route-id="@item.MaDg" class="btn btn-info btn-sm"><i class="bi bi-eye"></i> Xem </a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>
