@model DOAN.Models.Danhgium

@{
    ViewData["Title"] = "Chi tiết đánh giá";
}

<h1 class="text-center my-4">Chi Tiết Đánh Giá</h1>

<div class="card shadow p-4 mb-4 bg-light">
    <h4 class="card-title text-primary mb-3">Thông tin đánh giá</h4>
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th class="w-25">Đánh giá</th>
                <td>
                    <span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Rating) ★</span>
                </td>
            </tr>
            <tr>
                <th>Bình luận</th>
                <td>@Html.DisplayFor(model => model.BinhLuan)</td>
            </tr>
            <tr>
                <th>Ngày đánh giá</th>
                <td>@Html.DisplayFor(model => model.NgayDanhGia)</td>
            </tr>
            <tr>
                <th>Mặt hàng</th>
                <td>@Html.DisplayFor(model => model.MaMhNavigation.MaMh)</td>
            </tr>
            <tr>
                <th>Người dùng</th>
                <td>@Html.DisplayFor(model => model.MaNdNavigation.MaNd)</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="d-flex justify-content-between">
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại danh sách
    </a>
    <a asp-action="Edit" asp-route-id="@Model?.MaDg" class="btn btn-primary">
        <i class="bi bi-pencil-square"></i> Chỉnh sửa
    </a>
</div>
