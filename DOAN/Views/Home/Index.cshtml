@model IEnumerable<DOAN.Models.Mathang>
@{
    ViewData["Title"] = "Trang Quản Lý";
}

<div class="container mt-5">
    <!-- Tiêu đề -->
    <div class="text-center mb-5 p-5 bg-gradient bg-light border rounded-4 shadow" data-aos="fade-down">
        <h1 class="fw-bold text-primary"><i class="fas fa-tools me-2"></i>Trang Quản Lý</h1>
        <p class="text-muted fs-5">Quản lý cửa hàng một cách hiệu quả và thông minh</p>
    </div>

    <!-- Các mục quản lý -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">

        <!-- Quản lý sản phẩm -->
        <div class="col" data-aos="zoom-in" data-aos-delay="100">
            <div class="card h-100 border-0 shadow rounded-4 text-center p-4 transition">
                <div class="card-body">
                    <i class="fas fa-box fa-2x text-primary mb-3"></i>
                    <h5 class="card-title fw-bold">Quản lý sản phẩm</h5>
                    <p class="card-text">Thêm, chỉnh sửa và xóa sản phẩm.</p>
                    <a asp-controller="Mathangs" asp-action="Index" class="btn btn-primary btn-sm">Đi đến</a>
                </div>
            </div>
        </div>

        <!-- Quản lý danh mục -->
        <div class="col" data-aos="zoom-in" data-aos-delay="200">
            <div class="card h-100 border-0 shadow rounded-4 text-center p-4 transition">
                <div class="card-body">
                    <i class="fas fa-tags fa-2x text-success mb-3"></i>
                    <h5 class="card-title fw-bold">Quản lý danh mục</h5>
                    <p class="card-text">Tổ chức danh mục sản phẩm theo loại.</p>
                    <a asp-controller="Danhmucs" asp-action="Index" class="btn btn-success btn-sm">Đi đến</a>
                </div>
            </div>
        </div>

        <!-- Thống kê doanh thu -->
        <div class="col" data-aos="zoom-in" data-aos-delay="300">
            <div class="card h-100 border-0 shadow rounded-4 text-center p-4 transition">
                <div class="card-body">
                    <i class="fas fa-chart-line fa-2x text-danger mb-3"></i>
                    <h5 class="card-title fw-bold">Thống kê</h5>
                    <p class="card-text">Báo cáo doanh thu và sản phẩm bán chạy.</p>
                    <div class="d-flex justify-content-center gap-2">
                        <a asp-controller="ThongkeDoanhthus" asp-action="Index" class="btn btn-outline-danger btn-sm">Doanh thu</a>
                        <a asp-controller="ThongkeMathangBans" asp-action="Index" class="btn btn-outline-danger btn-sm">Bán hàng</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<!-- CSS Hover Effect -->
<style>
    .card.transition {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card.transition:hover {
            transform: translateY(-10px) scale(1.03);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.15);
            cursor: pointer;
        }
</style>

<!-- CSS AOS -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" rel="stylesheet">

<!-- JS AOS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
<script>
    AOS.init();
</script>
