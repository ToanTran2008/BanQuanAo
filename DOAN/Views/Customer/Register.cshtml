@{
    ViewData["Title"] = "Đăng ký tài khoản";
}
<div class="container py-5">
    <div class="row align-items-center justify-content-center">
        <div class="col-lg-6 col-md-8 col-sm-12">
            <div class="card shadow p-4">
                <!-- Ảnh minh họa -->
                <div class="text-center">
                    <img src="~/images/Resgin.jpg" alt="Đăng ký tài khoản" class="img-fluid mb-4" style="max-height: 150px;">
                </div>
                <h3 class="text-center text-primary mb-4">ĐĂNG KÝ TÀI KHOẢN</h3>
                <!-- Hiển thị lỗi nếu có -->
                @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                {
                    <div class="alert alert-danger text-center">
                        @ViewBag.ErrorMessage
                    </div>
                }
                <form method="post" asp-action="Register">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Nhập email" required>
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu</label>
                        <input type="password" id="password" name="matkhau" class="form-control" placeholder="Nhập mật khẩu" required>
                    </div>
                    <div class="mb-3">
                        <label for="confirm-password" class="form-label">Xác nhận mật khẩu</label>
                        <input type="password" id="confirm-password" name="xnmatkhau" class="form-control" placeholder="Xác nhận mật khẩu" required>
                    </div>
                    <div class="mb-3">
                        <label for="name" class="form-label">Họ tên</label>
                        <input type="text" id="name" name="hoten" class="form-control" placeholder="Nhập họ tên" required>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Số điện thoại</label>
                        <input type="text" id="phone" name="dienthoai" class="form-control" placeholder="Nhập số điện thoại" required>
                    </div>
                    <div class="d-grid mt-4">
                        <button type="submit" class="btn btn-primary">Đăng ký</button>
                    </div>
                </form>
                <div class="text-center mt-3">
                    <small>Bạn đã có tài khoản? <a asp-action="Login" class="text-decoration-none text-primary">Đăng nhập</a></small>
                </div>
            </div>
        </div>
    </div>
</div>
