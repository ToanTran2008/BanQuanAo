@model DOAN.Models.Diachi

@{
    ViewData["Title"] = "Chỉnh sửa địa chỉ";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditAddressItem" method="post">
    <input type="hidden" name="id" value="@Model.MaDc" />
    <div class="form-group">
        <label for="diachi1">Địa chỉ:</label>
        <input type="text" id="diachi1" name="chitiet" value="@Model.ChiTiet" class="form-control" />
    </div>
    <div class="form-group">
        <label for="phuongxa">Phường/Xã:</label>
        <input type="text" id="phuongxa" name="phuongxa" value="@Model.PhuongXa" class="form-control" />
    </div>
    <div class="form-group">
        <label for="quanhuyen">Quận/Huyện:</label>
        <input type="text" id="quanhuyen" name="quanhuyen" value="@Model.QuanHuyen" class="form-control" />
    </div>
    <div class="form-group">
        <label for="tinhthanh">Tỉnh/Thành:</label>
        <input type="text" id="tinhthanh" name="tinhthanh" value="@Model.TinhThanh" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="CustomerInfo" class="btn btn-secondary">Hủy</a>
</form>
