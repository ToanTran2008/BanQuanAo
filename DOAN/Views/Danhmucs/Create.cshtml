@model DOAN.Models.Danhmuc

@{
    ViewData["Title"] = "Thêm danh mục";
}

<h1 class="text-center text-light">Thêm danh mục</h1>

<div class="card bg-dark text-light shadow-lg p-4">
    <div class="card-body">
        <h4 class="card-title">Thông tin danh mục</h4>
        <hr />

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Ten" class="form-label fw-bold">Tên danh mục</label>
                <input asp-for="Ten" class="form-control" placeholder="Nhập tên danh mục..." />
                <span asp-validation-for="Ten" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                <textarea asp-for="MoTa" class="form-control" rows="3" placeholder="Nhập mô tả..."></textarea>
                <span asp-validation-for="MoTa" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Quay lại
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Lưu danh mục
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
