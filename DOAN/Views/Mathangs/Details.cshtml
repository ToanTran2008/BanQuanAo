@model DOAN.Models.Mathang

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-primary">Chi Tiết Sản Phẩm</h1>

<div class="card shadow-sm p-4">
    <h4 class="text-secondary">Thông tin Sản Phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.Ten)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Ten)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.GiaGoc)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.GiaGoc) VNĐ
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.GiaBan)
        </dt>
        <dd class="col-sm-9 text-danger font-weight-bold">
            @Html.DisplayFor(model => model.GiaBan) VNĐ
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.SoLuong)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.SoLuong) cái
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.MoTa)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MoTa)
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.HinhAnh)
        </dt>
        <dd class="col-sm-9">
            <img src="~/images/Products/@Html.DisplayFor(model => model.HinhAnh)" alt="Hình ảnh sản phẩm" />
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.LuotXem)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LuotXem) lượt
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            @Html.DisplayNameFor(model => model.LuotMua)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.LuotMua) lượt
        </dd>
        <dt class="col-sm-3 font-weight-bold">
            Danh mục
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.MaDmNavigation.Ten)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.MaMh" class="btn btn-warning">Chỉnh sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại danh sách</a>
</div>
