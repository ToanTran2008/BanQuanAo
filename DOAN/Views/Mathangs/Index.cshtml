@model IEnumerable<DOAN.Models.Mathang>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center mb-4">Danh sách Sản phẩm</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Tạo Mới</a>
</p>
<br />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaGoc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GiaBan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuotXem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LuotMua)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaDmNavigation)
            </th>
            <th style="width: 210px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaGoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaBan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        <img style="height:100px; width:100px;" src="~/images/Products/@item.HinhAnh" alt="Hình ảnh sản phẩm" class="img-fluid" />
                    }
                    else
                    {
                        <img style="height:100px; width:100px;" src="~/images/default.jpg" alt="Hình ảnh sản phẩm" class="img-fluid" />
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LuotXem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LuotMua)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDmNavigation.Ten)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.MaMh" class="btn btn-warning btn-sm">Cập nhật</a>
                    <a asp-action="Details" asp-route-id="@item.MaMh" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.MaMh" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>